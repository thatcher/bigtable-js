{{ extend $.env( "templates" ) + "html/base.tmpl" }}

{{ block title }}
<title>Envjs Release</title>
{{ /block }}

{{ block main }}
<div id='release'>
    <h3><a href='${ $.env("root")+"releases" }'>&lt; releases</a></h3>
    <div class='first column span-5 colborder'>
        <h4>${ release.name }</h4>
        <h5>
            <a href='${ $.env("root") + "doc/guides" }'>
                Getting Started
            </a>
        </h5>
        <h5>
            <a href='${ $.env("root") + "doc/apis" }'>
                API
            </a>
        </h5>
        <em>Release</em><br/>
        <span>Envjs ${ release.$id }</span> 
    </div>
     
    <div id='cover' 
         class='column span-6 colborder'>
            <a href='${ release.zip }'>
                <img 
                    src='${ $.env("root") + "images/zip.jpg" }'
                    alt='zip'
                    height='70px'
                />
            </a>
            <a href='${ release.tar }'>
                <img 
                    src='${ $.env("root") + "images/tar.jpg" }'
                    alt='tar'
                    height='70px'
                />
            </a>
    </div>
    <div id='media' 
         class='column span-9'>
        <ol class='clear'>
            {{ each distributables }}
            <li>
                <a href='${ this.url }'>
                    ${ this.label }
                </a>
                {{ html this.description }}
            </li>
            {{ /each }}
        </ol>
    </div>
    
    <div id='description' class='column span-22'>
        <div class='column span-18 push-3'>
            {{ html release.description }}
            <div class='column'>
                <h5>
                    <a href='${ release.readme }' target='_blank'>
                        README
                    </a>
                </h5>
            </div>
            <div class='column'>
                <ul class='clear'>
                    {{ each release.notes }}
                        <li> ${ this } </li>
                    {{ /each }}
                </ul>
            </div>
            <div class='column'>
                <strong>jQuery 1.3.2</strong>
                <img src='${ 
                     "http://chart.apis.google.com/chart"+
                     "?chs=150x75"+
                     "&cht=gom"+
                     "&chd=t:95"+
                     "&chl=1348 of 1420" 
                }'/>
            </div>
                
        </div>
    </div>
</div>
{{ /block }}